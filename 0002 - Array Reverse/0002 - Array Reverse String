package com.chandrikabijore;

import java.util.Arrays;

public class SHEET_0002_Array_String_Reverse
{
    public static void main(String[] args)
    {
        String[] OriginalArray = {"Shivi", "Sona", "Annu"};
        String[] ReversedArray = new String[OriginalArray.length];

        // Using inbuilt method in Java
        for (int i = 0; i < OriginalArray.length; i++)
        {
            ReversedArray[i] = OriginalArray[OriginalArray.length - 1 - i];
        }

        System.out.println("Original Array is : " + Arrays.toString(OriginalArray));
        System.out.println("Reversed Array is : " + Arrays.toString(ReversedArray));  //  Print the reversed array
    }
}
